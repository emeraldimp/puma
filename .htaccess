AcceptPathInfo on
<Files *ini*>
    Deny from all
</Files>
<Files *inc*>
    Deny from all
</Files>
<Files .svn>
    Deny from all
</Files>
<Files schema.sql>
    Deny from all
</Files>
<Files .htaccess>
    order allow,deny
    deny from all
</Files>

#RewriteEngine On
#RewriteBase /~imp/puma/src
#RewriteRule ^index\.php/.* - [NS,L]
#RewriteRule ^/?(page|user|resource)/(.*) index\.php/$1/$2 [L]

